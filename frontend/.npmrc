# Ensure npm uses the correct registry
registry=https://registry.npmjs.org/

# Disable audit for faster builds
audit=false

# Use legacy peer deps to avoid conflicts
legacy-peer-deps=true

# Ensure package-lock.json is used
package-lock=true

# Force npm to use exact versions
save-exact=true

# Disable optional dependencies
optional=false

# Use npm cache
cache=.npm-cache
